<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <ImageView android:src="@drawable/gameover" android:layout_width="wrap_content" android:id="@+id/imageView1" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:layout_marginTop="17dp"></ImageView>
    <TextView android:text="TextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/highscore" android:layout_below="@+id/score" android:layout_alignLeft="@+id/score" android:layout_marginTop="33dp"></TextView>
    <TextView android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:text="TextView" android:layout_height="wrap_content" android:id="@+id/score" android:layout_below="@+id/imageView1" android:layout_alignParentLeft="true" android:layout_marginLeft="15dp"></TextView>
    <TextView android:gravity="center" android:text="@string/press" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/highscore" android:layout_alignParentLeft="true" android:layout_marginTop="30dp"></TextView>
    
</RelativeLayout>
